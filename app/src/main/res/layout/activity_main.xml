<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ahmed.ox.MainActivity">

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:background="#374c6d"
       android:keepScreenOn="true">
       <TableRow
           android:id="@+id/row1"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/cell11"
               android:layout_height="match_parent"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:background="@drawable/boarder"
               android:onClick="cellClick"
               android:clickable="true" />
           <TextView
               android:id="@+id/cell12"
               android:layout_height="match_parent"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:background="@drawable/boarder"
               android:onClick="cellClick"
               android:clickable="true" />
           <TextView
               android:id="@+id/cell13"
               android:layout_height="match_parent"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:background="@drawable/boarder"
               android:onClick="cellClick"
               android:clickable="true"/>
       </TableRow>
       <TableRow
           android:id="@+id/row2"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/cell21"
               android:layout_height="match_parent"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:background="@drawable/boarder"
               android:onClick="cellClick"
               android:clickable="true"/>
           <TextView
               android:id="@+id/cell22"
               android:layout_height="match_parent"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:background="@drawable/boarder"
               android:onClick="cellClick"
               android:clickable="true"/>
           <TextView
               android:id="@+id/cell23"
               android:layout_height="match_parent"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:background="@drawable/boarder"
               android:onClick="cellClick"
               android:clickable="true"/>
       </TableRow>
       <TableRow
           android:id="@+id/row3"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/cell31"
               android:layout_height="match_parent"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:background="@drawable/boarder"
               android:onClick="cellClick"
               android:clickable="true"/>
           <TextView
               android:id="@+id/cell32"
               android:layout_height="match_parent"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:background="@drawable/boarder"
               android:onClick="cellClick"
               android:clickable="true"/>
           <TextView
               android:id="@+id/cell33"
               android:layout_height="match_parent"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:background="@drawable/boarder"
               android:onClick="cellClick"
               android:clickable="true"/>
       </TableRow>
   </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4d4d4d">
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_gravity="top">
            <RadioButton
                android:id="@+id/radioBoxX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:onClick="RadioClicked"
                android:text="@string/x"
                android:textColor="#FFFFFF"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/radioBoxY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="RadioClicked"
                android:text="@string/o"
                android:textColor="#FFFFFF"
                 />
        </RadioGroup>
        <TextView
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"
            android:clickable="true"
            android:onClick="resetClicked"
            />
    </LinearLayout>
</LinearLayout>
